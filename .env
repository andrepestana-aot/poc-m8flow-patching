# --- Postgres ---
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres

# --- Flask / Backend ---
FLASK_DEBUG=1
FLASK_ENV=development
FLASK_APP=app.py
# CHANGE this to your own random secret (32+ chars)
FLASK_SESSION_SECRET_KEY=e7711a3ba96c46c68e084a86952de16f

SPIFFWORKFLOW_BACKEND_ENV=local_development
SPIFFWORKFLOW_BACKEND_LOG_LEVEL=INFO
WATCHFILES_FORCE_POLLING=true

# --- Database (SQLAlchemy URI) ---
SPIFFWORKFLOW_BACKEND_DATABASE_TYPE=postgres
SPIFFWORKFLOW_BACKEND_DATABASE_URI=postgresql://postgres:postgres@localhost:1111/postgres
SPIFFWORKFLOW_BACKEND_UPGRADE_DB=true


# --- Ports / URLs (replace localhost with your machine IP if needed) ---
SPIFFWORKFLOW_BACKEND_PORT=8000
SPIFFWORKFLOW_BACKEND_URL=http://localhost:8000
SPIFFWORKFLOW_BACKEND_URL_FOR_FRONTEND=http://localhost:8000

# --- Models path inside container ---
SPIFFWORKFLOW_BACKEND_BPMN_SPEC_ABSOLUTE_DIR=/mnt/c/dev/repos/poc-m8flow-patching/process_models

# --- Auth (OIDC / Keycloak) ---
# NOTE: fixed stray '}' from your original.
SPIFFWORKFLOW_BACKEND_OPEN_ID_SERVER_URL=http://localhost:8080/auth/realms/spiffworkflow
SPIFFWORKFLOW_BACKEND_OPEN_ID_CLIENT_ID=spiffworkflow-backend
SPIFFWORKFLOW_BACKEND_OPEN_ID_CLIENT_SECRET_KEY=
SPIFFWORKFLOW_BACKEND_OPEN_ID_IS_AUTHORITY_FOR_USER_GROUPS=true
SPIFFWORKFLOW_BACKEND_WORKFLOW_ADMIN_GROUP=camunda-admin
KEYCLOAK_ENABLE_CLIENT_AUTH=false

# --- Celery / Redis ---
SPIFFWORKFLOW_BACKEND_CELERY_ENABLED=true
# If you prefer db 0 for both backend and worker, keep /0; otherwise set plain redis://redis:6379
SPIFFWORKFLOW_BACKEND_CELERY_BROKER_URL=redis://localhost:6379/0
SPIFFWORKFLOW_BACKEND_CELERY_RESULT_BACKEND=redis://localhost:6379/0
SPIFFWORKFLOW_BACKEND_RUNNING_IN_CELERY_WORKER=true

# --- Frontend ---
SPIFFWORKFLOW_BACKEND_URL_FRONTEND=http://localhost:8000  # used by UI to reach backend (alias if you want)
SPIFFWORKFLOW_BACKEND_URL=http://localhost:8000           # the UI actually reads this

# --- Optional (Connector proxy, tenancy, permissions) ---
SPIFFWORKFLOW_BACKEND_CONNECTOR_PROXY_URL=http://localhost:8004
MULTI_TENANCY_ENABLED=false
SPIFFWORKFLOW_BACKEND_PERMISSIONS_FILE_NAME=example.yml

# --- Tooling (harmless if present) ---
VIRTUAL_ENV=
POETRY_VIRTUALENVS_IN_PROJECT=
